<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--    tools:context="com.example.calculatergacha.GalleryActivity"-->

    <RelativeLayout
        android:id="@+id/optionLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#344250">
        <ImageButton
            android:id="@+id/galleryBackBtn"
            android:background="@drawable/button_back"
            android:layout_width="300px"
            android:layout_height="300px"
            android:gravity="start">
        </ImageButton>

        <TextView
            android:text="Gallery"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/pf_stardustbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gridlayout"
            android:layout_centerHorizontal="true">
        </TextView>

        <GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:columnCount="3"
            android:rowCount="3">

            <ImageButton
                android:id="@+id/peng1Btn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/peng_basic"
                android:text="1"></ImageButton>

            <ImageButton
                android:id="@+id/peng2Btn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/peng_rainnon"
                android:text="2"></ImageButton>

            <ImageButton
                android:id="@+id/peng3Btn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/peng_adellynon"
                android:text="3"></ImageButton>

            <ImageButton
                android:id="@+id/peng4Btn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/peng_ribbonnon"
                android:text="4"></ImageButton>

            <ImageButton
                android:id="@+id/peng5Btn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/peng_plantnon"
                android:text="5"></ImageButton>

            <ImageButton
                android:id="@+id/peng6Btn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/peng_eggnon"
                android:text="6"></ImageButton>

            <ImageButton
                android:id="@+id/peng7Btn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/peng_adellykingnon"
                android:text="7"></ImageButton>

            <ImageButton
                android:id="@+id/peng8Btn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/peng_rainkingnon"
                android:text="8"></ImageButton>

            <ImageButton
                android:id="@+id/peng9Btn"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@drawable/peng_babynon"
                android:text="9"></ImageButton>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridlayout"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:fontFamily="@font/pf_stardustbold"
            android:text="Click : Change your main Penguin\n\n Long Click : Show penguin information"
            android:textColor="@color/white"
            android:textSize="15dp"></TextView>

    </RelativeLayout>

</LinearLayout>