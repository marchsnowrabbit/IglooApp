<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appproject1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 12월 1일 팝업 변경 -->
        <activity android:name=".OptionActivity"
            android:theme="@style/OptionPopup"></activity>
        <activity android:name=".CalendarActivity"
            android:theme="@style/Dialog"></activity>
        <activity android:name=".GalleryActivity"
            android:theme="@style/Dialog"></activity>
        <activity android:name=".UpdateActivity"
            android:theme="@style/Theme.AppCompat.Translucatent"></activity>
        <activity android:name=".WriteActivity"
            android:theme="@style/Dialog"></activity>

    </application>

</manifest>